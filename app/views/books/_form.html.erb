<%= form_with model: book, local:true do |f| %>
  <% if book.errors.any? %>
       <% book.errors.full_messages.each do |message| %>
        <li>error <%= message %></li>
       <% end %>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
